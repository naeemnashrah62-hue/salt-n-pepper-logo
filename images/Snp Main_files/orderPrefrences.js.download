                  if (formattedHour === 0) {
                      formattedHour = 12; // Midnight hour should be 12
                  } else if (formattedHour === 12) {
                      ampm = ""; // Noon should be PM
                  } else if (formattedHour > 12) {
                      formattedHour -= 12; // Convert PM hours to 12-hour format
